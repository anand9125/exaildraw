generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model User {
  id              String  @id @default(uuid())
  username        String  @unique
  password        String
  name            String
  photo           String?
  joinedrooms     Room[]  @relation(name: "participants") //many to many relation a user can join many rooms and a room can have many users
  controlledrooms Room[] //one to many relation a user can be admin of many rooms but a room can have only one admin
  Chat            Chat[] //one user can have many chat messages
}

model Room {
  id           String   @id @default(uuid())
  title        String
  joinCode     String   @unique
  participants User[]   @relation(name: "participants")
  admin        User     @relation(fields: [adminId], references: [id])
  adminId      String
  Chat         Chat[]   //rooms own all messsages
  Draw         Draw[]   // rooms owns all drawings canvas
  createdAt    DateTime @default(now())
}

model Chat {
  id           String   @id @default(uuid())
  serialNumber Int      @default(autoincrement())
  content      String
  user         User     @relation(references: [id], fields: [userId])
  userId       String
  room         Room     @relation(references: [id], fields: [roomId])
  roomId       String
  createdAt    DateTime @default(now())
}

enum Shape {
  rectangle
  diamond
  circle
  line
  arrow
  text
  freeHand
}

model Draw {
  id          String  @id
  shape       Shape
  strokeStyle String
  fillStyle   String
  lineWidth   Int
  font        String?
  fontSize    String?
  startX      Int?
  startY      Int?
  endX        Int?
  endY        Int?
  text        String?
  points      Json?
  room        Room    @relation(references: [id], fields: [roomId])  //canvas state is room scoped means when user joins rooms fetch all data row when leavs nothing breaks
  roomId      String
}

